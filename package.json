{
	"name": "cantata-tools",
	"displayName": "Cantata Tools",
	"description": "Tools to help create and mod Cantata",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cantata-tools.data.newInteractable",
		"onCommand:cantata-tools.data.newTerrain",
		"onCustomEditor:cantata-tools.data"
	],
	"main": "./out/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "cantata-tools.data",
				"displayName": "Cantata Data",
				"selector": [
					{
						"filenamePattern": "*.{cterrain,cinteractable,cruleset,cfaction,csupply,dpo}"
					}
				]
			}
		],
		"commands": [
			{
				"command": "cantata-tools.data.newInteractable",
				"title": "Create new Cantata Interactable",
				"category": "Cantata Tools"
			},
			{
				"command": "cantata-tools.data.newTerrain",
				"title": "Create new Cantata Terrain",
				"category": "Cantata Tools"
			}
		]
	},
	"scripts": {
		"svelte-build": "rollup -c",
		"svelte-dev": "rollup -c -w",
		"start": "sirv public",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.48.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0",
		"@rollup/plugin-commonjs": "^14.0.0",
		"@rollup/plugin-node-resolve": "^8.0.0",
		"rollup": "^2.3.4",
		"rollup-plugin-livereload": "^1.0.0",
		"rollup-plugin-svelte": "^5.0.3",
		"rollup-plugin-terser": "^7.0.0",
		"svelte": "^3.0.0"
	},
	"dependencies": {
		"sirv-cli": "^1.0.0",
		"uuid": "^8.3.0"
	}
}
